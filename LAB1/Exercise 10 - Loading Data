<!DOCTYPE html>
<html lang="en">

  <head>
    <script src='https://d3js.org/d3.v7.min.js'></script>

  </head>

  <body>
    <script>
    /*Exercise 10: Exercise: Write an update to the example above, so extra elements are added to the window to display 
information.  For instance, display paragraphs for the total patients with heart failure between 1-30, 31-40, 41-60, 
61-100.  Process the data, store it in an array then pass that array to ‘selectAll()’, ‘data()’ as discussed in previous 
sections. */
    
    
    
      let heartfailurecsv = 'https://raw.githubusercontent.com/akmand/datasets/master/heart_failure.csv';
      /* 
      age,anaemia,creatinine_phosphokinase,diabetes,ejection_fraction,high_blood_pressure,platelets,serum_creatini
      ne,serum_sodium,sex,smoking,time,DEATH_EVENT 
      75,0,582,0,20,1,265000,1.9,130,1,0,4,1 
      55,0,7861,0,38,0,263358.03,1.1,136,1,0,6,1 
      65,0,146,0,20,0,162000,1.3,129,1,1,7,1 
      50,1,111,0,20,0,210000,1.9,137,1,0,7,1 
      */
      
      //array to store data
      var fail = [0, 0, 0, 0] 
      //array for display
      var fromTill = ["1 till 30", "31 till 40", "41 till 60", "61 till 100"] 
      
      
      d3.csv(heartfailurecsv, function(data) { 
        //look at age in the data
        age = parseInt(data.age)
        
        // if death occured 
        if (data.DEATH_EVENT == 1) { 
           //record in the appropriate index depending on age 
          if (age <= 30) { 
            fail[0] +=1 
          } else if (age <= 41) { 
            fail[1] +=1
          } else if (age <= 60) { 
            fail[2]+=1
          } else if (age <= 100) {
            fail[3]+= 1
          }
        }

      }).then(function(data) { 
        // bind it to DOM  and display it as text
        var span = d3.select("body")
          .selectAll("span")
          .data(fail) 
          .enter()
          .append("p") 
          .text(function(d, i) { 
           return ( " Heart failure from the age of " + fromTill[i]+ ": " + d)
          }).style("color","purple")
         
      })

    </script>
  </body>

</html>
